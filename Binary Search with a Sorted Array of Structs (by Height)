#include <iostream>
#include <string>
using namespace std;

struct Person {
    int height; // in cm
    string name;
};

int binarySearchPersonByHeight(Person arr[], int size, int targetHeight) {
    int left = 0, right = size - 1;
    while (left <= right) {
        int mid = left + (right - left) / 2;
        if (arr[mid].height == targetHeight) return mid;
        if (arr[mid].height < targetHeight) left = mid + 1;
        else right = mid - 1;
    }
    return -1;
}
